<div class="container mt-5">
    <div class="card card-body shadow-lg border-0">
        <h3 class="mx-auto my-4">Actualizar Datos</h3>
        <form action="/links/{{userData.id}}" method="post">
            <div class="form-group row">
                <div class="col-6">
                    <label for="cedula">Cedula</label>
                    <input type="text" id="cedula" name="cedula" placeholder="cedula" class="form-control"
                        value="{{userData.cedula}}" autofocus required>
                </div>
                <div class="col-6">
                    <label for="name">Nombre</label>
                    <input type="text" id="name" name="name" placeholder="Nombres" class="form-control"
                        value="{{userData.nombre}}" required>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-6">
                    <label for="apellido">Apellido</label>
                    <input type="text" id="apellido" name="lastName" placeholder="Apellidos" class="form-control"
                        value="{{userData.apellido}}" required>
                </div>
                <div class="col-6">
                    <label for="username">Nombre de Usuario</label>
                    <input type="text" name="username" placeholder="Usuario" class="form-control"
                        value="{{userData.username}}" required>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-6">
                    <label for="clave">Clave</label>
                    <input type="text" id="clave" name="clave" placeholder="clave" class="form-control" required>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label for="selectType">Rol</label>
                        <select name="selectType" id="selectType" class="custom-select" required>
                            <option selected>{{userData.tipo_usuario}}</option>
                            <option value="1">Administrador</option>
                            <option value="2">Auxiliar GH</option>
                            <option value="3">Jefe GH</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <button class="btn btn-warning btn-block py-3 shadow">Actualizar</button>
            </div>
        </form>
    </div>
</div>