{{!-- vamos a comprobar que existe un mensaje de confirmacion al realizar una operacion --}}
{{#if success}}
<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="alert alert-success alert-dimissible fade show" role="alert">
                {{!-- aca ira el mensjae de confirmacion que nos enviara el back --}}
                {{success}}
                <button type="button" class="close" data-dismiss="alert" aria-label="close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>
    </div>
    {{/if}}

    {{!-- mensaje de codigo de error , alerta --}}
    {{#if message}}
    <div class="container p-4">
        <div class="row">
            <div class="col-md-4 mx-auto">
                <div class="alert alert-danger alert-dimissible fade show" role="alert">
                    {{!-- aca ira el mensjae de confirmacion que nos enviara el back --}}
                    {{message}}
                    <button type="button" class="close" data-dismiss="alert" aria-label="close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        </div>
        {{/if}}