<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3>Iniciar Sesion</h3>
                </div>
                <div class="card-body">
                    <form action="/signin" method="post">
                        <img src="/img/saturn.png" alt="logo" class="card-img-top mx-auto m-2 rounded-circle w-50">
                        <div class="form-group">
                            <input type="text" name="username" placeholder="User Name" class="form-control" autofocus
                                required>
                        </div>
                        <div class="form-group">
                            <input type="password" name="clave" placeholder="Password" class="form-control" autofocus
                                required>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">Ingresar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>